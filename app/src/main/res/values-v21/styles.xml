<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="divider">@color/colorDivider</item>
        <item name="icon">@color/colorTextIcon</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimaryDark</item>

    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat.Light"></style>

    <style name="AppBarTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="icon">@color/colorTextIcon</item>
        <item name="android:textColor">@color/primaryText</item>


    </style>

</resources>
